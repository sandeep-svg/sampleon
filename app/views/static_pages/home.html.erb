<% if flash[:note1] %>
    <div ><%= flash[:note1] %> at <%= Time.now %></div>
<% end %>
<% if logged_in? %>
<% if @micropost.errors.any?%>
     <ul> <%@micropost.errors.full_messages.each do |msg|%>
      <li><%=msg%></li>
      <%end%></ul>
<%end%>
<% if flash[:success] %>
    <div ><%= flash[:success] %> successfully at <%= Time.now %></div>
<% end %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
<h3>Hello , <%= current_user.name %></h3>
<span><%= link_to "view my profile", current_user %></span>
<span><%= pluralize(current_user.microposts.count, "micropost") %></span>
      </section>
      
       <%= form_for (@micropost) do |f| %>
 
    <%= f.text_area :content, placeholder: "write something..." %><br/>
  
        <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
    </aside>
  </div>
<% else %>
<body><div  class='login'>
<h1>Welcome !! </h1><br/>
<p  class='btn btn-outline-primary'> <%=link_to 'Sign Up now!' ,signup_path%></p><br/>
<p class='btn btn-outline-success'> <%=link_to 'login' ,login_methods_path%></p>
<p>Vaccination Details</p>
<%=form_for(:vaccine, url: vaccine_path)  do |f|%>
    
    <%= f.label :'pincode (xxxxxx)'%><br/>
    <%= f.text_field :pincode %><br/>

    <%= f.label :'date (dd-mm-yyyy)' %><br/>
    <%= f.text_field :date , class:'form_control'%><br/>

    <%=f.submit 'Get the details',class:'btn btn-primary'%>
   <%end%>
</div>
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5211866546894580"
     crossorigin="anonymous"></script>
</body>
<% end %>
