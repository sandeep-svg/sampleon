<div class='errors'>
<% if @user.errors.any?%>
     <ul> <%@user.errors.full_messages.each do |msg|%>
      <li><%=msg%></li>
      <%end%></ul>
<%end%>
</div>
<div class='signup'>
  
   <h2>SignUp</h2>
   <%=form_for(@user) do |f|%>
    
    <%= f.label :name %><br/>
    <%= f.text_field :name %><br/>

    <%= f.label :email %><br/>
    <%= f.email_field :email , class:'form_control'%><br/>

    <%= f.label :password %><br/>
    <%= f.password_field :password %><br/>

    <%= f.label :confirmation %><br/>
    <%= f.password_field :password_confirmation%><br/>

    <%=f.submit 'create my account',class:'btn btn-primary'%>
   <%end%>
   <p>Already a user? <%= link_to "  login.", login_path %></p>

   <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5211866546894580"
     crossorigin="anonymous"></script>
     
</div>
